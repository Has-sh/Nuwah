  
<h1>{{ package.name }}</h1>
<p><strong>Price:</strong> {{ package.currentPrice }} <del>{{ package.originalPrice }}</del> ({{ package.salePercentage }})</p>
<p><strong>Delivery:</strong> {{ package.deliveryTime }}</p>
<p><strong>Description:</strong> {{ package.description }}</p>

<ul>
  {% for feature in package.features %}
    <li>{{ feature }}</li>
  {% endfor %}
</ul>

<div>
  <h3>Colors:</h3>
  {% for color in package.colors %}
    <div style="display:inline-block; margin-right:10px;">
      <div style="width:20px; height:20px; background:{{ color.hex }}; border:1px solid #000;"></div>
      <span>{{ color.name }}</span>
    </div>
  {% endfor %}
</div>

<div>
  <h3>Room Types:</h3>
  <ul>
    {% for room in package.roomTypes %}
      <li{% if room.active %} style="font-weight:bold;"{% endif %}>{{ room.name }}</li>
    {% endfor %}
  </ul>
</div>

<div>
  <h3>Images:</h3>
  {% for img in package.images %}
    <img src="{{ img }}" alt="{{ package.name }}" style="width:200px; margin:10px;" />
  {% endfor %}
</div>
