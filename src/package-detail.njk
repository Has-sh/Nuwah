---
pagination:
  data: packages.packages
  size: 1
  alias: package
permalink: "/packages/{{ package.slug }}/"
layout: layout.njk
---

<style>
        .custom-navbar {
            background:rgba(0, 0, 0, 0.5);
        }
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #e74c3c;
            --success-color: #27ae60;
            --text-light: #7f8c8d;
            --border-color: #ecf0f1;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: var(--primary-color);
            background-color: #f8f9fa;
        }

        .breadcrumb {
            background: none;
            padding: 1rem 0;
            font-size: 0.9rem;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: ">";
            color: var(--text-light);
        }

        .breadcrumb-item a {
            color: var(--text-light);
            text-decoration: none;
        }

        .breadcrumb-item.active {
            color: var(--primary-color);
        }

        .product-section {
            padding: 2rem 0;
        }

        .product-gallery {
            position: relative;
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .main-image {
            position: relative;
            height: 500px;
            overflow: hidden;
        }

        .main-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .gallery-overlay {
            position: absolute;
            bottom: 20px;
            left: 20px;
            background: rgba(0,0,0,0.8);
            color: white;
            padding: 10px 20px;
            border-radius: 20px;
            font-size: 0.9rem;
        }

        .delivery-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .tabby-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: #3ecf8e;
            color: white;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: bold;
        }

        .thumbnail-gallery {
            display: flex;
            gap: 10px;
            padding: 15px;
            overflow-x: auto;
        }

        .thumbnail {
            flex-shrink: 0;
            width: 80px;
            height: 80px;
            border-radius: 6px;
            overflow: hidden;
            cursor: pointer;
            border: 2px solid transparent;
            transition: border-color 0.3s ease;
        }

        .thumbnail.active {
            border-color: var(--primary-color);
        }

        .thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-info {
            padding: 2rem;
        }

        .package-title {
            font-size: 2rem;
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: 1rem;
            padding-left:0;
        }

        .rating {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 1.5rem;
        }

        .stars {
            color: #ffc107;
        }

        .price-section {
            margin-bottom: 2rem;
        }

        .current-price {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--accent-color);
        }

        .original-price {
            text-decoration: line-through;
            color: var(--text-light);
            margin-left: 10px;
        }

        .sale-badge-package {
            background: var(--accent-color);
            color: white;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 0.8rem;
            margin-left: 10px;
        }

        .installment-info {
            background: #e8f5e8;
            padding: 10px;
            border-radius: 6px;
            margin-bottom: 2rem;
            font-size: 0.9rem;
        }

        .color-options {
            margin-bottom: 2rem;
        }

        .color-title {
            font-weight: 600;
            margin-bottom: 10px;
        }

        .color-swatches {
            display: flex;
            gap: 10px;
        }

        .color-swatch {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid #ddd;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .color-swatch:hover {
            transform: scale(1.1);
        }

        .color-swatch.active {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 2px rgba(44, 62, 80, 0.3);
        }

        .room-options {
            margin-bottom: 2rem;
        }

        .room-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .room-btn {
            padding: 8px 16px;
            border: 1px solid #ddd;
            background: white;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            color: black
        }

        .room-btn:hover,
        .room-btn.active {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }
        .whatsapp-btn {
            background: #25d366;
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 6px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s ease;
            width: 100%;
            margin-bottom: 1rem;
        }

        .whatsapp-btn:hover {
            background: #1db954;
        }

        .package-description {
            line-height: 1.8;
            color: var(--text-light);
            margin-bottom: 2rem;
        }

        .info-sections {
            margin-top: 2rem;
        }

        .info-section {
            border: 1px solid #ddd;
            border-radius: 6px;
            margin-bottom: 10px;
        }

        .info-header {
            padding: 15px;
            background: #f8f9fa;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
        }

        .info-content {
            padding: 15px;
            display: none;
            border-top: 1px solid #ddd;
        }

        .info-content.active {
            display: block;
        }

        @media (max-width: 768px) {
            .product-section {
                padding: 1rem 0;
            }
            
            .product-info {
                padding: 1rem;
            }
            
            .package-title {
                font-size: 1.5rem;
            }
            
            .main-image {
                height: 300px;
            }
            
            .room-buttons {
                justify-content: center;
            }
        }
    </style>

<div class="container custom-padding">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/packages">All Packages</a></li>
            <li class="breadcrumb-item active">{{ package.name }}</li>
        </ol>
    </nav>

    <div class="product-section">
        <div class="row">
            <!-- Product Gallery -->
            <div class="col-lg-6">
                <div class="product-gallery">
                    <div class="main-image">
                        <img id="mainImage" src="{{ package.images[0] }}" alt="{{ package.name }}">
                        <div class="gallery-overlay">From Studio to Villas</div>
                        <div class="delivery-badge">Delivery {{ package.deliveryTime }}</div>
                        <div class="tabby-badge">tabby</div>
                    </div>
                    
                    <div class="thumbnail-gallery">
                        {% for image in package.images %}
                        <div class="thumbnail{% if loop.first %} active{% endif %}" onclick="changeImage(this, '{{ image }}')">
                            <img src="{{ image }}" alt="View {{ loop.index }}">
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-lg-6">
                <div class="product-info">
                    <h1 class="package-title">{{ package.name }}</h1>
                    
                    <div class="rating">
                        <div class="stars">
                            {% for i in range(0, package.rating) %}
                            <i class="fas fa-star"></i>
                            {% endfor %}
                        </div>
                        <span>({{ package.reviewCount }})</span>
                    </div>

                    <div class="price-section">
                        <span class="current-price">Dhs. {{ package.currentPrice }}</span>
                        <span class="original-price">Dhs. {{ package.originalPrice }}</span>
                        <span class="sale-badge-package">{{ package.salePercentage }}</span>
                    </div>

                    <div class="installment-info">
                        <i class="fas fa-credit-card"></i> As low as <strong>Dhs 1,733/month</strong> or 4 interest-free payments. <a href="#" style="color: #3ecf8e;">More options</a> 
                        <span style="background: #3ecf8e; color: white; padding: 2px 6px; border-radius: 3px; font-size: 0.8rem; margin-left: 10px;">tabby</span>
                    </div>

                    <div class="color-options">
                        <div class="color-title">Color: {{ package.defaultColor }}</div>
                        <div class="color-swatches">
                            {% for color in package.colors %}
                            <div class="color-swatch{% if color.name == package.defaultColor %} active{% endif %}" 
                                 style="background: {{ color.hex }}; {% if color.hex == '#ffffff' %}border-color: #ddd;{% endif %}" 
                                 onclick="selectColor(this, '{{ color.name }}')"></div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="room-options">
                        <div class="color-title">Apartment Type/Number of Items: {{ package.roomTypes[0].name }}</div>
                        <div class="room-buttons">
                            {% for room in package.roomTypes %}
                            <button class="room-btn{% if room.active %} active{% endif %}" 
                                    onclick="selectRoom(this, '{{ room.name }}')">{{ room.name }}</button>
                            {% endfor %}
                        </div>
                    </div>

                    <button class="whatsapp-btn">
                        <i class="fab fa-whatsapp"></i> Continue on WhatsApp
                    </button>

                    <div class="package-description">
                        <p><strong>Confirm your order with your private customer service manager today.</strong> You can also mix and match items as needed.</p>
                        <p><em>Free supervision & shipping included in package price</em></p>
                    </div>

                    <div class="package-description">
                        <p>{{ package.description }}</p>
                        
                        {% for feature in package.features %}
                        <p>{{ feature }}</p>
                        {% endfor %}
                    </div>

                    <div class="info-sections">
                        <div class="info-section">
                            <div class="info-header" onclick="toggleInfo(this)">
                                <span>Free Product Specialist Visit</span>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <div class="info-content">
                                <p>Our design specialists will visit your space to ensure perfect fit and styling. This complimentary service includes measurement, design consultation, and space planning.</p>
                            </div>
                        </div>

                        <div class="info-section">
                            <div class="info-header" onclick="toggleInfo(this)">
                                <span>Delivery & Assembly</span>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <div class="info-content">
                                <p>Professional delivery and assembly service included. Our team will deliver, assemble, and position all items in your space. Delivery typically takes {{ package.deliveryTime }} from order confirmation.</p>
                            </div>
                        </div>

                        <div class="info-section">
                            <div class="info-header" onclick="toggleInfo(this)">
                                <span>Returns & Refunds</span>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <div class="info-content">
                                <p>30-day return policy on all items. If you're not completely satisfied, we'll arrange pickup and provide a full refund. Custom items may have different return conditions.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        function changeImage(thumbnail, imageSrc) {
            document.getElementById('mainImage').src = imageSrc;
            
            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            thumbnail.classList.add('active');
        }

        function selectColor(swatch, colorName) {
            document.querySelectorAll('.color-swatch').forEach(s => {
                s.classList.remove('active');
            });
            swatch.classList.add('active');
            
            // Update color name
            document.querySelector('.color-title').textContent = `Color: ${colorName}`;
        }

        function selectRoom(button, roomType) {
            document.querySelectorAll('.room-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            button.classList.add('active');
            
            // Update room type display
            document.querySelector('.room-options .color-title').textContent = `Apartment Type/Number of Items: ${roomType}`;
        }

        function changeQuantity(change) {
            const quantityInput = document.getElementById('quantity');
            let currentValue = parseInt(quantityInput.value);
            let newValue = currentValue + change;
            
            if (newValue >= 1) {
                quantityInput.value = newValue;
            }
        }

        function toggleInfo(header) {
            const content = header.nextElementSibling;
            const icon = header.querySelector('i');
            
            if (content.classList.contains('active')) {
                content.classList.remove('active');
                icon.style.transform = 'rotate(0deg)';
            } else {
                // Close all other sections
                document.querySelectorAll('.info-content').forEach(c => {
                    c.classList.remove('active');
                });
                document.querySelectorAll('.info-header i').forEach(i => {
                    i.style.transform = 'rotate(0deg)';
                });
                
                // Open current section
                content.classList.add('active');
                icon.style.transform = 'rotate(180deg)';
            }
        }

        // WhatsApp button functionality
        document.querySelector('.whatsapp-btn').addEventListener('click', function() {
            const packageName = document.querySelector('.package-title').textContent;
            const color = document.querySelector('.color-title').textContent;
            const roomType = document.querySelector('.room-options .color-title').textContent;
            const quantity = document.getElementById('quantity').value;
            
            const message = `Hi! I'm interested in the ${packageName}. 
${color}
${roomType}
Quantity: ${quantity}

Could you please provide more details?`;
            
            const whatsappUrl = `https://wa.me/971XXXXXXXXX?text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, '_blank');
        });
    </script>