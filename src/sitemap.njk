---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% set siteUrl = "https://nuwah.pages.dev" %}
  
  {% set today = "now" | date: "%Y-%m-%d" %}
  
  <!-- Homepage -->
  <url>
    <loc>{{ siteUrl }}/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- Packages -->
  <url>
    <loc>{{ siteUrl }}/packages/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <!-- Design Services -->
  <url>
    <loc>{{ siteUrl }}/design-services/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <!-- Contact -->
  <url>
    <loc>{{ siteUrl }}/contact/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <!-- Renovation -->
  <url>
    <loc>{{ siteUrl }}/renovation/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <!-- Furniture Categories -->
  <url>
    <loc>{{ siteUrl }}/furniture/sofa/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ siteUrl }}/furniture/table/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ siteUrl }}/furniture/chair/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <!-- Individual Packages -->
  {% for package in collections.packages %}
  <url>
    <loc>{{ siteUrl }}/packages/{{ package.slug }}/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}
  
  <!-- Individual Projects -->
  {% for project in collections.projects %}
  <url>
    <loc>{{ siteUrl }}/projects/{{ project.slug }}/</loc>
    <lastmod>{{ today }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}
</urlset>

