  </div>
    <div class="row" id="productGrid">
      {% for product in items.products %}
      <div class="col-12 col-sm-6 col-md-4 mb-4 product-item">
      <a href="/furniture/{{ items.category | slugify }}/{{ product.slug }}/" class="text-decoration-none">
        <div class="product-card"
             data-price="{{ product.price }}" 
             data-title="{{ product.title }}" 
             data-featured="{{ product.featured }}"
             data-category="{{ items.category }}">
          <div class="product-image-container">
            {% if product.onSale %}
            <span class="product-sale-badge">On Sale</span>
            {% endif %}
            <img src="{{ product.colorOptions[0] }}" 
                 alt="{{ product.title }}" 
                 class="product-image" 
                 id="main-image-{{ product.id }}"
                 loading="lazy">
          </div>
          <div class="product-info">
            <h3 class="product-title">{{ product.title }}</h3>
            <div class="product-price">
              {% set minPrice = product | minFurniturePrice %}
              {% set minOriginalPrice = product | minFurnitureOriginalPrice %}
              <span class="current-price">From Dhs. {{ minPrice }}</span>
              {% if minOriginalPrice %}
              <span class="original-price">Dhs. {{ minOriginalPrice }}</span>
              {% endif %}
            </div>
            {% if product.colorOptions | length > 1 and product.slug != 'vintage-armchair' and product.slug != 'boston-accent-chair' %}
            <div class="color-options">
              {% for color in product.colorOptions %}
              <img 
                src="{{ color }}" 
                class="color-option{% if loop.index == 1 %} active{% endif %}" 
                onclick="changeMainImage({{ product.id }}, '{{ color }}', this)"
                alt="Color option {{ loop.index }}"
                loading="lazy">
              {% endfor %}
            </div>
            {% endif %}
          </div>
        </div>
      </a>
      </div>
      {% endfor %}
    </div>
    
