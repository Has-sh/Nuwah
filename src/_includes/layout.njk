<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Preconnect for Performance - Must be first in head (max 4 for best performance) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://cdn.jsdelivr.net">
  <link rel="preconnect" href="https://cdnjs.cloudflare.com">
  
  {% set siteUrl = site.url %}
  {% set currentUrl = siteUrl + page.url %}
  {% set pageTitle = title or "Nuwah - Creating Emotion Through Space" %}
  {% set pageDescription = description or "Premium interior design studio in Dubai, UAE. Transform spaces with elegant, functional designs and bespoke luxury solutions." %}
  {% set pageImage = image or siteUrl + "/assets/img/footer-logo-Photoroom.png" %}
  
  <!-- Primary Meta Tags -->
  <title>{{ pageTitle }}</title>
  <meta name="title" content="{{ pageTitle }}">
  <meta name="description" content="{{ pageDescription }}">
  <meta name="keywords" content="interior design, Dubai, UAE, luxury interior design, residential design, commercial design, furniture, home renovation, fitout">
  <meta name="author" content="Nuwah">
  <meta name="robots" content="index, follow">
  <meta name="language" content="English">
  <meta name="revisit-after" content="7 days">
  <meta name="theme-color" content="#667eea">
  
  <!-- Google Site Verification -->
  <meta name="google-site-verification" content="LtKMOWbD_y36ykH_--7vlCKDuHZP9O5RlZo8Zu-vxe8" />
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ currentUrl }}">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ currentUrl }}">
  <meta property="og:title" content="{{ pageTitle }}">
  <meta property="og:description" content="{{ pageDescription }}">
  <meta property="og:image" content="{{ pageImage }}">
  <meta property="og:site_name" content="Nuwah">
  <meta property="og:locale" content="en_US">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="{{ currentUrl }}">
  <meta name="twitter:title" content="{{ pageTitle }}">
  <meta name="twitter:description" content="{{ pageDescription }}">
  <meta name="twitter:image" content="{{ pageImage }}">
  
  <!-- Favicon -->
  <link rel="icon" href="/assets/img/favicon.ico" type="image/x-icon">
  <link rel="apple-touch-icon" href="/assets/img/favicon.ico">

  <!-- Critical CSS - Load synchronously to prevent FOUC -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/assets/css/styles.css">
  
  <!-- Non-critical CSS - Load asynchronously -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" media="print" onload="this.media='all'">
  <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"></noscript>
  
  {% if page.url == '/admin/' %}
    <link rel="stylesheet" href="/assets/css/wdt-styles.css">
  {% endif %}
  
  <!-- Structured Data (Schema.org) -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "Nuwah",
    "description": "Premium interior design studio in Dubai, UAE, transforming residential and commercial spaces with elegance, functionality, and emotion.",
    "url": "{{ siteUrl }}",
    "logo": "{{ siteUrl }}/assets/img/footer-logo-Photoroom.png",
    "image": "{{ pageImage }}",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "AE",
      "addressLocality": "Dubai",
      "addressRegion": "Dubai"
    },
    "telephone": "+971-XX-XXX-XXXX",
    "priceRange": "$$$",
    "areaServed": {
      "@type": "Country",
      "name": "United Arab Emirates"
    },
    "sameAs": [
      "https://www.instagram.com/nuwah",
      "https://www.facebook.com/nuwah",
      "https://www.twitter.com/nuwah"
    ]
  }
  </script>
  
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Nuwah",
    "url": "{{ siteUrl }}",
    "logo": "{{ siteUrl }}/assets/img/footer-logo-Photoroom.png",
    "description": "{{ pageDescription }}",
    "sameAs": [
      "https://www.instagram.com/nuwah",
      "https://www.facebook.com/nuwah",
      "https://www.twitter.com/nuwah"
    ]
  }
  </script>
  
  {% if breadcrumbs %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {% for crumb in breadcrumbs %}
      {
        "@type": "ListItem",
        "position": {{ loop.index }},
        "name": "{{ crumb.name }}",
        "item": "{{ siteUrl }}{{ crumb.url }}"
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ]
  }
  </script>
  {% endif %}
</head>
<body>
<header>
	<nav class="custom-navbar">
		<div class="navbar-logo">
			<a href="/">
				<img src="/assets/img/header-logo.svg" alt="Nuwah Logo" class="logo-img" width="50" height="50">
				<img src="/assets/img/nuwah.svg" alt="Nuwah" class="logo-text" width="120" height="30">
			</a>

		</div>
		<div class="navbar-links">
			<ul>
				<li><a href="/packages" class="{% if page.url == '/packages/' %}active{% endif %}">Packages</a></li>
        <li class="nav-dropdown">
          <a href="#" class="nav-dropdown-toggle {% if '/furniture/' in page.url %}active{% endif %}">Furniture</a>
          <ul class="nav-dropdown-menu">
            <li><a href="/furniture/sofa/" class="{% if page.url == '/furniture/sofa/' %}active{% endif %}">Sofa</a></li>
            <li><a href="/furniture/table/" class="{% if page.url == '/furniture/table/' %}active{% endif %}">Table</a></li>
            <li><a href="/furniture/chair/" class="{% if page.url == '/furniture/chair/' %}active{% endif %}">Chair</a></li>
          </ul>
        </li>
        <li><a href="/renovation" class="{% if page.url == '/renovation/' %}active{% endif %}">Renovation & Fitout</a></li>
        <li><a href="/design-services" class="{% if page.url == '/design-services/' %}active{% endif %}">Design Services</a></li>
        <li><a href="/contact" class="{% if page.url == '/contact/' %}active{% endif %}">Contact Us</a></li>
			</ul>
		</div>
		<div class="nav-toggle-btn">
			<span></span>
			<span></span>
			<span></span>
		</div>
	</nav>
</header>

  <main>
    {{ content | safe }}
  </main>

  <footer>
  <div class="container-fluid" style="background-color: #F7F7F7;">
    <div class="md-main-wrapper d-flex flex-column align-items-center">

      <!-- Logo -->
      <div class="md-logo-image-wrapper mb-3">
        <img src="/assets/img/footer-logo-Photoroom.png" alt="Nuwah - interior design" class="md-logo-image" width="200" height="200">
      </div>

      <!-- Navigation -->
      <nav class="md-navigation mb-3">
        <ul class="list-inline m-0">
          <li class="list-inline-item"><a href="/packages">Packages</a></li>
          <li class="list-inline-item"><a href="/furniture/sofa/">Furniture</a></li>
          <li class="list-inline-item"><a href="/renovation">Renovation & Fitout</a></li>
          <li class="list-inline-item"><a href="/design-services">Design Services</a></li>
          <li class="list-inline-item"><a href="/contact">Contact Us</a></li>
        </ul>
      </nav>

      <!-- Social Links -->
      <div class="md-social-container mb-3">
        <a href="#" class="md-social-link md-facebook me-3" aria-label="Follow us on Facebook">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="#" class="md-social-link md-instagram me-3" aria-label="Follow us on Instagram">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="#" class="md-social-link md-youtube" aria-label="Follow us on YouTube">
          <i class="fab fa-youtube"></i>
        </a>
      </div>

      <!-- Copyright -->
      <p class="md-footer-text text-muted text-center mb-0">
        Â© Created by Einzcare &nbsp;&nbsp; All rights reserved
      </p>

    </div>
  </div>
</footer>

  <!-- Load JavaScript asynchronously to prevent render blocking -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js" defer></script>
  
  <!-- Inject Cloudflare Pages environment variables for Google API -->
  <script>
    // These will be replaced by Cloudflare Pages build process
    // Set GOOGLE_API_KEY and GOOGLE_PLACE_ID as environment variables in Cloudflare Pages
    window.GOOGLE_API_KEY = '{{ env.GOOGLE_API_KEY }}';
    window.GOOGLE_PLACE_ID = '{{ env.GOOGLE_PLACE_ID }}';
  </script>
  
  <script src="/assets/js/script.js" defer></script>
  
  <!-- Google Ads Conversion Tracking - Deferred for better performance -->
  <!-- Replace AW-XXXXXXXXXX with your Google Ads conversion ID -->
  <!-- Get your conversion ID from: Tools & Settings > Conversions in Google Ads -->
  <script>
    // Defer Google Tag Manager loading
    window.addEventListener('load', function() {
      const script = document.createElement('script');
      script.async = true;
      script.src = 'https://www.googletagmanager.com/gtag/js?id=AW-XXXXXXXXXX';
      document.head.appendChild(script);
      
      script.onload = function() {
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'AW-XXXXXXXXXX');
        
        // Helper function to track conversions
        window.trackGoogleAdsConversion = function(conversionLabel, value, currency = 'AED') {
          if (typeof gtag !== 'undefined' && conversionLabel) {
            gtag('event', 'conversion', {
              'send_to': 'AW-XXXXXXXXXX/' + conversionLabel,
              'value': value || 0,
              'currency': currency,
              'transaction_id': ''
            });
          }
        };
      };
    });
  </script>
  
